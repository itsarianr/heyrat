<% if (typeof includePwaMeta !== 'undefined' && includePwaMeta) { %>
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<meta name="apple-mobile-web-app-title" content="حیران - مجموعه اشعار پارسی">
<meta name="mobile-web-app-capable" content="yes">
<meta name="application-name" content="حیران - مجموعه اشعار پارسی">
<meta name="theme-color" content="#1d1837">
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<meta property="og:site_name" content="حیران - مجموعه اشعار پارسی">
<meta property="og:type" content="website">
<meta property="og:url" content="https://heyraan.com">
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "حیران - مجموعه اشعار پارسی",
  "alternateName": ["حیران", "heyraan.com"],
  "url": "https://heyraan.com"
}
</script>
<% } else { %>
<header>
  <script type="text/javascript">
    (function(c,l,a,r,i,t,y){
      c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
      t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
      y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "u2dut8w37e");
  </script>

  <div class="color-picker" id="color-picker" style="display: none;">
    <div class="color-options" id="color-options"></div>
  </div>

  <div class="header-content">
    <div class="header-title-section">
      <h1><a href="/">حیران</a></h1>
      <p class="subtitle">مجموعه اشعار فارسی</p>
    </div>
    <nav class="header-nav">
      <a href="/" class="header-nav__link <%= typeof currentPath !== 'undefined' && currentPath === '/' ? 'header-nav__link--active' : '' %>">خانه</a>
      <a href="/feed" class="header-nav__link <%= typeof currentPath !== 'undefined' && currentPath === '/feed' ? 'header-nav__link--active' : '' %>">فید</a>
      <a href="/favorites" class="header-nav__link <%= typeof currentPath !== 'undefined' && currentPath === '/favorites' ? 'header-nav__link--active' : '' %>">علاقه‌مندی‌ها</a>
      <a href="/profile/display-name" class="header-nav__link <%= typeof currentPath !== 'undefined' && currentPath && currentPath.startsWith('/profile') ? 'header-nav__link--active' : '' %>">
        <% if (currentUser) { %>
          <%= currentUser.display_name || currentUser.email %>
        <% } else { %>
          حساب
        <% } %>
      </a>
    </nav>

    <div class="header-actions">
      <button class="theme-toggle" id="theme-toggle" aria-label="تغییر رنگ پس‌زمینه">
        <svg width="25" height="25" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18.37 2.63 14 7l-1.59-1.59a2 2 0 0 0-2.82 0L8 7l9 9 2.59-2.59a2 2 0 0 0 0-2.82L17 10l4.37-4.37a2.12 2.12 0 1 0-3-3Z"></path>
          <path d="M9 8c-2 3-4 3.5-7 4l8 10c2-1 6-5 6-7"></path>
          <path d="M14.5 17.5 4.5 15"></path>
        </svg>
      </button>
      <a href="/profile/display-name" class="header-account" aria-label="حساب کاربری">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>
    </div>
  </div>
</header>
<% } %>

