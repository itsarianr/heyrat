<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>حیران - شعر پارسی</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/header', { showHomeLink: false }) %>

  <main>
    <% data.poets.forEach(poet => { %>
      <% poet.books.forEach(book => { %>
        <section class="book">
          <h2><%= book.title %></h2>
          <p class="poet">از <%= poet.name %></p>

          <% book.sections.forEach(section => { %>
            <div class="section">
              <ul class="poem-list">
                <% section.poems.forEach(poem => { %>
                  <li>
                    <a href="/<%= poet.id %>/<%= book.id %>/<%= section.id %>/<%= poem.id %>">
                      <%= section.title %>
                    </a>
                  </li>
                <% }); %>
              </ul>
            </div>
          <% }); %>
        </section>
      <% }); %>
    <% }); %>
  </main>

  <%- include('partials/footer') %>

  <script src="/client.js"></script>
</body>
</html>

